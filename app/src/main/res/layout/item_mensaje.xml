<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#FFC000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_mensaje_fecha"
                android:text="5/ene/2017"
                android:layout_width="match_parent"
                android:textColor="#666"
                android:textSize="11dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_mensaje_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aviso de regreso a Clases"
                android:paddingLeft="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_mensaje_descripcion"
                android:text="Pues recordandole que traiga a sus parasitos ya el siguiente lunes..."
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="#666"
                android:paddingRight="10dp"
                android:paddingLeft="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="!"
                android:gravity="center"
                android:textColor="#ff0000"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*"
                android:gravity="center"
                android:paddingTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="45dp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>